<div id="Console">

  <div class="page-header">
    <h1>Most Recent Readings</h1>
  </div>

  <table id="sensors" class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>When?</th>
        <th>What?</th>
        <th>How Much?</th>
      </tr>
    </thead>
    <tbody>
      <tr class="sensor" id="sensor_template" style="display:none;">
        <td><span class="time expires"></span></td>
        <td class="source"></td>
        <td class="reading"></td>
      </tr>
    </tbody>
  </table>

  <div>Last polled: <span id='last_poll_time' class="expires"></span></div>

<% content_for :js_init do %>
  Console.overview(readings);
<% end %>

<% content_for :js_end do %>
  var sources = <%=raw(sources.to_json)%>
  var readings = <%=raw(memcache.get_readings(params).to_json)%>;
<% end %>
