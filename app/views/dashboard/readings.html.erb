<div id="Readings_Log">

  <div class="page-header">
    <h1>Reading Log <small>at <span class="time"><%= Time.now.to_i*1000 %></span></small></h1>
  </div>

  <table id="readings" class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>When?</th>
        <th>What?</th>
        <th>Payload</th>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => "reading", :collection => @readings %>
    </tbody>
  </table>

</div> 

<% content_for :js_end do %>
  $('.time').each(function(index, e) {
    t = $(e);
    t.html( (new Date(Number(t.html()))).format("ddd mmm dd yyyy HH:MM:ss", true) );
  });
<% end %>
